{
  "styles": {
    "subdistrictFill": {
      "type": "fill",
      "paint": {
        "fill-color": [
          "match",
          ["get", "color_id"],
          1, "#e41e32",
          2, "#ff782a",
          3, "#e2cf04",
          4, "#98c217",
          5, "#3f64ce",
          6, "#7e2b8e",
          "#cccccc"
        ],
        "fill-opacity": 0.2
      }
    },
    "subdistrictLine": {
      "type": "line",
      "paint": {
        "line-color": "rgba(70, 70, 70, 0.4)",
        "line-width": 1
      }
    },
    "districtOutline": {
      "type": "line",
      "paint": {
        "line-color": "rgba(25, 25, 25, 0.6)",
        "line-width": 2
      }
    },
    "cityOutline": {
      "type": "line",
      "paint": {
        "line-color": "rgba(110, 90, 60, 0.4)",
        "line-width": 5
      }
    },
    "specialLine": {
      "type": "line",
      "paint": {
        "line-color": "rgba(80, 20, 20, 1)",
        "line-width": 2,
        "line-dasharray": [3, 2, 3, 2, 1, 2, 1, 3]
      }
    }
  },
  "subdistrictLayers": [
    "./src/boundaries/subdistrict/dongcheng-all.geojson",
    "./src/boundaries/subdistrict/xicheng-all.geojson",
    "./src/boundaries/subdistrict/chaoyang-all.geojson",
    "./src/boundaries/subdistrict/fengtai-all.geojson",
    "./src/boundaries/subdistrict/shijingshan-all.geojson",
    "./src/boundaries/subdistrict/haidian-all.geojson",
    "./src/boundaries/subdistrict/mentougou-all.geojson",
    "./src/boundaries/subdistrict/fangshan-all.geojson",
    "./src/boundaries/subdistrict/tongzhou-all.geojson",
    "./src/boundaries/subdistrict/shunyi-all.geojson",
    "./src/boundaries/subdistrict/changping-all.geojson",
    "./src/boundaries/subdistrict/yanqing-all.geojson",
    "./src/boundaries/subdistrict/miyun-all.geojson",
    "./src/boundaries/subdistrict/pinggu-all.geojson",
    "./src/boundaries/subdistrict/huairou-all.geojson",
    "./src/boundaries/subdistrict/daxing-all.geojson"
  ],
  "districtOutlines": [
    "./src/boundaries/district/dongcheng-outline.geojson",
    "./src/boundaries/district/xicheng-outline.geojson",
    "./src/boundaries/district/chaoyang-outline.geojson",
    "./src/boundaries/district/fengtai-outline.geojson",
    "./src/boundaries/district/shijingshan-outline.geojson",
    "./src/boundaries/district/haidian-outline.geojson",
    "./src/boundaries/district/mentougou-outline.geojson",
    "./src/boundaries/district/fangshan-outline.geojson",
    "./src/boundaries/district/tongzhou-outline.geojson",
    "./src/boundaries/district/shunyi-outline.geojson",
    "./src/boundaries/district/changping-outline.geojson",
    "./src/boundaries/district/yanqing-outline.geojson",
    "./src/boundaries/district/miyun-outline.geojson",
    "./src/boundaries/district/pinggu-outline.geojson",
    "./src/boundaries/district/huairou-outline.geojson",
    "./src/boundaries/district/daxing-outline.geojson"
  ],
  "labelLayerDefaults": {
    "subdistrict": {
      "minzoom": 12,
      "maxzoom": 22,
      "layout": {
        "text-font": ["Noto Sans SC Regular", "Arial Unicode MS Regular", "sans-serif"],
        "text-size": 14,
        "text-anchor": "center",
        "text-justify": "center",
        "text-field": ["get", "Name"]
      },
      "paint": {
        "text-color": "rgb(71, 68, 65)",
        "text-halo-color": "rgb(250, 245, 242)",
        "text-halo-width": 3.0
      }
    },
    "district": {
      "minzoom": 8,
      "maxzoom": 12,
      "layout": {
        "text-font": ["Noto Sans SC Bold", "Arial Unicode MS Bold"],
        "text-size": 17,
        "text-anchor": "center",
        "text-justify": "center",
        "text-field": ["get", "Name"]
      },
      "paint": {
        "text-color": "rgb(56, 54, 49)",
        "text-halo-color": "rgb(243, 243, 243)",
        "text-halo-width": 2.0
      }
    }
  },

  "cityOutline": "./src/boundaries/city/beijing-outline.geojson",
  "specialLayers": [
    {
      "file": "./src/boundaries/special/chaoyang-exclave-line.geojson",
      "styleRef": "specialLine"
    }
  ],
  "layers": []
}